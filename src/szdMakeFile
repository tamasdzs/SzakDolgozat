CC=g++
CFLAGS=-c -Wall -I ./eigen -I ./headers
LDFLAGS=
LIBS=-lwfdb -lcurl
SOURCES=test.cpp OrtFunSys.cpp Hermite.cpp SigPrep.cpp EcgSigPrep.cpp Compresser.cpp OrtCompresser.cpp NelderMead.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=test

all: $(SOURCES) $(EXECUTABLE)
    
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ $(LIBS)
