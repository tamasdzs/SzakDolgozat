CC=g++
CFLAGS=-c -Wall -std=c++0x -I ../../eigen -I ./headers
LDFLAGS=
LIBS=-lwfdb -lcurl
SOURCES=mt.cpp SigPrep.cpp EcgSigPrep.cpp OrtFunSys.cpp Hermite.cpp OrtCompresser.cpp NelderMead.cpp MatchingPursuit.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=mt

all: $(SOURCES) $(EXECUTABLE)
    
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ $(LIBS)
